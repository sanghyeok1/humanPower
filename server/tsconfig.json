{
  "compilerOptions": {
    // 런타임/타깃
    "target": "ES2020",
    "lib": ["ES2020"],

    // 모듈 시스템: CJS
    "module": "commonjs",
    "moduleResolution": "node",

    // ESM 임포트 → CJS로 트랜스파일 허용 (핵심!)
    "verbatimModuleSyntax": false,

    // 편의/타입
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node"],

    // 빌드 경로
    "rootDir": "src",
    "outDir": "dist"
  },
  "include": ["src"]
}
